<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/name_species_tv"
        style="@style/species"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/classification_species_tv"
        style="@style/species"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Classification"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_species_tv" />

    <TextView
        android:id="@+id/eye_color_species_tv"
        style="@style/species"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eye_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/classification_species_tv" />

    <TextView
        android:id="@+id/hair_colors_species_tv"
        style="@style/species"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hair_colors"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/eye_color_species_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>